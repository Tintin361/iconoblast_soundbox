<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".IcoFragment">

        <androidx.cardview.widget.CardView
            android:id="@+id/icoCardView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="@dimen/marginBottomSize"
            android:elevation="4dp"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imageView"
                    android:layout_width="125dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:elevation="4dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/iconoblast_channel_image" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/icob"
                    android:textAlignment="center"
                    android:textColor="@color/zelda"
                    android:textSize="25sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/icoCardView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/icoCardView1"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="@dimen/marginBottomSize"
            android:elevation="4dp"
            app:cardCornerRadius="16dp">

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <LinearLayout
                    android:id="@+id/linearlayout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/VodImageView"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:focusable="true"
                        android:src="@drawable/vodonoblast_image"
                        app:riv_border_color="@android:color/holo_red_dark"
                        app:riv_border_width="1dp"
                        app:riv_corner_radius="40dp"
                        app:riv_mutate_background="true" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/twBlastImageView"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:focusable="true"
                        android:src="@drawable/tw_logo" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/tcBlastImageView"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:focusable="true"
                        android:src="@drawable/tc_logo" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/discordBlastImageView"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:focusable="true"
                        android:src="@drawable/discord_logo" />

                </LinearLayout>

            </HorizontalScrollView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/icoCardView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/icoCardView2"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="20dp"
            android:elevation="4dp"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:id="@+id/linearlayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ytBlastImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:focusable="true"
                    android:src="@drawable/youtube2" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/icoCardView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/icoCardView3"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="@dimen/marginBottomSize"
            android:elevation="4dp"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="125dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:elevation="4dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/iconoclaste_image" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/icoc"
                    android:textAlignment="center"
                    android:textColor="@color/zelda"
                    android:textAllCaps="false"
                    android:textSize="25sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/icoCardView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/icoCardView4"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="20dp"
            android:elevation="4dp"
            app:cardCornerRadius="16dp">

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ytIcoImageView"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:focusable="true"
                        android:src="@drawable/youtube_icon" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/twIcoImageView"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:focusable="true"
                        android:src="@drawable/tw_logo" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/igIcoImageView"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:focusable="true"
                        android:src="@drawable/ig_logo" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/fbIcoImageView"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:focusable="true"
                        android:src="@drawable/fb_logo" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/spIcoImageView"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:focusable="true"
                        android:src="@drawable/snap_logo" />

                </LinearLayout>

            </HorizontalScrollView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/icoCardView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/icoCardView5"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="@dimen/marginBottomSize"
            android:elevation="4dp"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="125dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:elevation="4dp"
                    android:scaleType="centerCrop"
                    app:riv_corner_radius="40dp"
                    app:riv_border_width="1dp"
                    app:riv_border_color="@android:color/holo_green_dark"
                    android:src="@drawable/etagere_icon_image" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/etagere"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/zelda"
                    android:textSize="25sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/icoCardView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/icoCardView6"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="@dimen/marginBottomSize"
            android:elevation="4dp"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/discordEtaImageView"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:focusable="true"
                            android:src="@drawable/discord_logo" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ytEtaImageView"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:focusable="true"
                            android:src="@drawable/youtube_icon" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/twEtaImageView"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:focusable="true"
                            android:src="@drawable/tw_logo" />

                    </LinearLayout>

                </HorizontalScrollView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>

