<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".IcoFragment">

        <TextView
            android:id="@+id/textViewLicence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:text="@string/click"
            android:textColor="@color/blue3"
            android:textSize="@dimen/text" />

        <androidx.cardview.widget.CardView
            android:id="@+id/licenceCardView1"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/textViewLicence"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="@dimen/marginBottomSize"
            app:cardCornerRadius="16dp"
            app:elevation="4dp">

            <TextView
                android:id="@+id/gifText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:focusable="true"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/gif"
                android:textSize="@dimen/buttonDefault" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/licenceCardView2"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/licenceCardView1"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="@dimen/marginBottomSize"
            app:cardCornerRadius="16dp"
            app:elevation="4dp">

            <TextView
                android:id="@+id/opusText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:focusable="true"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/opus"
                android:textSize="@dimen/buttonDefault" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/licenceCardView3"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/licenceCardView2"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="@dimen/marginBottomSize"
            app:cardCornerRadius="16dp"
            app:elevation="4dp">

            <TextView
                android:id="@+id/statusText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:focusable="true"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/statusbar"
                android:textSize="@dimen/buttonDefault" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/licenceCardView4"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/licenceCardView3"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="@dimen/marginBottomSize"
            app:cardCornerRadius="16dp"
            app:elevation="4dp">

            <TextView
                android:id="@+id/intentText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:focusable="true"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/intent"
                android:textSize="@dimen/buttonDefault" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/licenceCardView5"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/licenceCardView4"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="@dimen/marginBottomSize"
            app:cardCornerRadius="16dp"
            app:elevation="4dp">

            <TextView
                android:id="@+id/majText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:focusable="true"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/majLicence"
                android:textSize="@dimen/buttonDefault" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/licenceCardView6"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/licenceCardView5"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="@dimen/marginBottomSize"
            app:cardCornerRadius="16dp"
            app:elevation="4dp">

            <TextView
                android:id="@+id/picassoText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:focusable="true"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/picasso"
                android:textSize="@dimen/buttonDefault" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/licenceCardView7"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/licenceCardView6"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="@dimen/marginBottomSize"
            app:cardCornerRadius="16dp"
            app:elevation="4dp">

            <TextView
                android:id="@+id/animatooText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:focusable="true"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/animatoo"
                android:textSize="@dimen/buttonDefault" />

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>

